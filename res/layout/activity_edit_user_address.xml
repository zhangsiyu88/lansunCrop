<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_com" />

    <RelativeLayout
        android:id="@+id/rl_select_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_h"
        android:background="@color/app_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/l_r_35"
        android:paddingRight="@dimen/l_r_35" >

        <TextView
            android:id="@+id/textView1"
            style="@style/text_style_big_34"
            android:layout_centerVertical="true"
            android:text="@string/city"
            android:textColor="@color/text_gray1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView1" >

            <TextView
                android:id="@+id/tv_edit_city"
                style="@style/text_style_nomal_28"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/l_r_14"
                android:layout_marginRight="@dimen/l_r_20"
                android:background="@color/app_white" />

            <com.android.pc.ioc.image.RecyclingImageView
                android:id="@+id/iv_edit_user_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_r" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/line_style_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_h"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/l_r_35"
        android:paddingRight="@dimen/l_r_35" >

        <TextView
            style="@style/text_style_big_34"
            android:text="@string/edit_user_address"
            android:textColor="@color/text_gray1" />

        <EditText
            android:id="@+id/et_edit_user_address"
            style="@style/text_style_nomal_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/l_r_14"
            android:background="@null"
            android:hint="@string/please_enter_address"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_edit_user_like_commit"
        style="@style/text_style_nomal_28"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_h"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:layout_marginTop="@dimen/margin_top_35"
        android:background="@drawable/tv_style_green"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/app_white" />
    
    <FrameLayout 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/fl_data"> 
    </FrameLayout>

</LinearLayout>