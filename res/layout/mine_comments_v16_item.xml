<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/list_display_view_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/l_r_35"
            android:paddingBottom="@dimen/margin_top_35" >

            <com.android.pc.ioc.image.RecyclingImageView
                android:id="@+id/iv_mine_v16_head"
                android:layout_width="@dimen/mine_v16_w"
                android:layout_height="@dimen/mine_v16_h"
                android:layout_marginTop="@dimen/margin_top_35"
                android:background="@drawable/default_list" />

            <TextView
                android:id="@+id/tv_mine_v16_name"
                style="@style/text_style_nomal_28"
                android:layout_marginLeft="@dimen/l_r_35"
                android:layout_marginRight="@dimen/l_r_35"
                android:layout_marginTop="@dimen/margin_top_28"
                android:layout_toRightOf="@+id/iv_mine_v16_head"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="啊类似的卡上的  萨德阿萨德萨德阿萨德萨德阿萨德德阿萨德萨德阿萨德萨德阿萨德德阿萨德萨德阿萨德萨德阿萨德德阿萨德萨德阿萨德萨德阿萨德萨德阿萨德"
                android:textColor="@color/text_gray1" />

            <TextView
                android:id="@+id/tv_mine_v16_tag"
                style="@style/text_style_small_24"
                android:layout_alignBottom="@id/iv_mine_v16_head"
                android:layout_marginLeft="@dimen/l_r_35"
                android:layout_toRightOf="@+id/iv_mine_v16_head"
                android:background="@drawable/label"
                android:gravity="center"
                android:paddingBottom="@dimen/label_p_b"
                android:paddingLeft="@dimen/label_p_l"
                android:paddingRight="@dimen/label_p_r"
                android:paddingTop="@dimen/label_p_t"
                android:textColor="@color/app_green1" />

            <TextView
                android:id="@+id/tv_mine_v16_time"
                style="@style/text_style_small_24"
                android:layout_alignBottom="@id/iv_mine_v16_head"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/l_r_35"
                android:ellipsize="end"
                android:maxLines="1" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_top_35"
            android:layout_marginRight="@dimen/margin_top_35"
            android:background="@color/line_bg" />
    </LinearLayout>

</RelativeLayout>