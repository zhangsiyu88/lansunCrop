<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_grey3"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_h"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.android.pc.ioc.image.RecyclingImageView
            android:id="@+id/iv_activity_back"
            style="@style/w_wrap_h_wrap"
            android:layout_gravity="center"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_feedback_title"
            style="@style/text_style_big_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/feedback"
            android:textColor="@color/app_green2" />
    </RelativeLayout>

    <View style="@style/line_style_1" />

    <com.lansun.qmyo.view.MyListView
        android:id="@+id/lv_feedback_list"
        style="@style/w_full_h_wrap"
        android:background="@color/app_white"
        android:cacheColorHint="#00000000"
        android:divider="@color/line_bg1"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <TextView
        style="@style/text_style_small_26"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_32"
        android:lineSpacingExtra="22px"
        android:text="@string/feedback_tip" />

</LinearLayout>