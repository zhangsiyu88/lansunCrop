<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_top_35"
    android:layout_marginRight="@dimen/margin_top_35"
    android:layout_marginBottom="@dimen/margin_top_35"
    android:paddingTop="@dimen/margin_top_20"
    android:paddingBottom="@dimen/margin_top_20"
    android:paddingLeft="@dimen/margin_top_30"
    android:paddingRight="@dimen/margin_top_30"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mine_secretary_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/secretary_reply"
            android:gravity="center" >

            <com.lansun.qmyo.view.CircularImage
                android:id="@+id/iv_mine_question_head"
                style="@style/secretary_head_small_80" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_question_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_question_type_tv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/my_question_btn_shape"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/my_question_time"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView style="@style/line_style_2" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"
        android:text="问题:" />

    <TextView style="@style/line_style_2" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:text="回复:" />
</LinearLayout>