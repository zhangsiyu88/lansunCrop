<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_top_35"
    android:layout_marginLeft="@dimen/margin_top_35"
    android:layout_marginRight="@dimen/margin_top_35"
    android:background="@color/app_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_top_30"
    android:paddingLeft="@dimen/margin_top_30"
    android:paddingRight="@dimen/margin_top_30"
    android:paddingTop="@dimen/margin_top_30" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mine_secretary_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/secretary_reply"
            android:gravity="center" >

            <com.lansun.qmyo.view.CircularImage
                android:id="@+id/iv_mine_question_head"
                style="@style/secretary_head_small_80" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            
            
       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:text="迈界"
                android:id="@+id/my_question_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />


            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/my_question_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="1970-09-01"
                android:textColor="@color/text_gray4"/>
            
          </RelativeLayout> 
            
            
            
            
            
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >    
	           <TextView
	                android:id="@+id/my_question_type_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/rectangle_background_gray_text_secretary_details"
	                android:gravity="center"
	                android:text="0000"
	                android:textSize="12dp" 
	                android:textColor="@color/text_gray2"
			       	android:paddingTop="3dp"
			       	android:paddingBottom="3dp"
			       	android:paddingLeft="5dp"
			       	android:paddingRight="5dp"/>
	             <TextView
	                android:layout_alignParentRight="true"
	                android:id="@+id/have_information"
	                android:layout_width="10dp"
	                android:layout_height="10dp"
	                android:background="@drawable/circle_shape_infor_center"
	                android:layout_centerVertical="true"
	                /><!--android:visibility="invisible"   -->
          </RelativeLayout>  
                
                
	        <!-- <TextView
		        android:visibility="gone"
		        android:id="@+id/tv_conversation_title"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="15dp"
		        android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:background=""
		       	android:gravity="center"
		       	android:text="离不开好疯狂 "
		       	android:textSize="12dp"
		       	android:textColor="@color/text_gray2"
		       	android:paddingTop="3dp"
		       	android:paddingBottom="3dp"
		       	android:paddingLeft="5dp"
		       	android:paddingRight="5dp"/> -->
        </LinearLayout>

       
    </LinearLayout>

    <!-- <TextView style="@style/line_style_2" /> -->

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="问题：  " />

    <TextView style="@style/line_style_2" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="回复：  " />

</LinearLayout>