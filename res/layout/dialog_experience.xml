<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/bottom_menu_h" 
    android:alpha="50">

    <LinearLayout
        android:id="@+id/ll_dialog_content"
        android:layout_width="@dimen/expe_dialog_w"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/expe_dialog_content_margin_top"
        android:background="@drawable/tv_style_white"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.android.pc.ioc.image.RecyclingImageView
                android:id="@+id/iv_exp_bankcard"
                android:layout_width="@dimen/search_activity_w"
                android:layout_height="@dimen/search_activity_h"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_top_20" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            style="@style/text_style_small_24"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="@string/maijie_tigong"
            android:textColor="@color/app_green2" />

        <TextView
            android:id="@+id/tv_expe_desc"
            style="@style/text_style_nomal_28"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35"
            android:layout_marginTop="@dimen/margin_top_20"
            android:gravity="center_horizontal"
            android:textColor="#6F6F6F" 
            android:lineSpacingExtra="4dp"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/text_style_small_24"
            android:layout_marginBottom="@dimen/margin_top_20"
            android:layout_marginTop="@dimen/margin_top_15"
            android:text=""
            android:textColor="@color/app_green2" />
        <!-- android:text="@string/experience_now" -->
    </LinearLayout>

    <Button
        android:id="@+id/btn_expe_confirm"
        style="@style/text_style_small_24"
        android:layout_width="@dimen/expe_btn_w"
        android:layout_height="@dimen/register_edit_h"
        android:layout_below="@id/ll_dialog_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_35"
        android:background="@drawable/button"
        android:text="@string/confirm"
        android:textColor="@color/app_white" />

    <TextView
        android:id="@+id/tv_expe_relogin"
        style="@style/text_style_nomal_28"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:layout_marginTop="@dimen/margin_top_20"
        android:text=""
        android:textColor="@color/app_white" />
        <!-- android:text="@string/re_login" -->

    <com.android.pc.ioc.image.RecyclingImageView
        android:id="@+id/bt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/expe_dialog_icon_margin_top"
        android:src="@drawable/log_in" />

</RelativeLayout>