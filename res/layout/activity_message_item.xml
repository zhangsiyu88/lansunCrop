<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/w_wrap_h_wrap"
    android:background="@color/app_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/l_r_35" >

        <TextView
            android:id="@+id/tv_message_item_name"
            style="@style/text_style_big_34"
            android:layout_width="@dimen/tv_w_500"
            android:layout_marginTop="@dimen/margin_top_35"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_gray1" />

        <TextView
            android:id="@+id/tv_search_activity_time"
            style="@style/text_style_small_26"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_message_item_name"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_message_item_desc"
            style="@style/text_style_small_26"
            android:layout_width="@dimen/tv_w_500"
            android:layout_below="@id/tv_message_item_name"
            android:layout_marginTop="@dimen/margin_top_10" />

        <TextView
            android:id="@+id/tv_message_item_count"
            style="@style/text_style_small_26"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_message_item_desc"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35"
            android:gravity="center"
            android:background="@drawable/circle_background_red"
            android:ellipsize="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_35"
            android:layout_below="@id/tv_message_item_desc" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        style="@style/line_style_1"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35" />

</LinearLayout>