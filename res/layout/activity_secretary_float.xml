<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/margin_top_35"
    android:background="@color/app_green1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_top_35" >

    <TextView
        style="@style/text_style_small_26"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginTop="@dimen/margin_top_35"
        android:text="神盾局长辛苦了！是时候要享受度假好好放松放松了！"
        android:textColor="@color/app_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:layout_marginTop="@dimen/margin_top_25"
        android:alpha="0.5"
        android:background="@color/app_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:layout_marginTop="@dimen/margin_top_25"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/text_style_small_26"
            android:layout_marginRight="@dimen/l_r_35"
            android:text="在想要出去旅游的时候，不要让繁琐的程序打败你哟！ 因为小秘书将成为您的出游防坑小助手；"
            android:textColor="@color/app_white" />

        <com.android.pc.ioc.image.RecyclingImageView
            android:id="@+id/iv_secretary_open"
            style="@style/w_wrap_h_wrap"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:background="@drawable/sirenmishu_close" />
    </RelativeLayout>

</LinearLayout>