<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_dialog_h"
    android:background="@drawable/tv_style_white" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_close"
        android:src="@drawable/login_dialog" />

    <ImageView
        android:id="@+id/bt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/imageView2"
        android:layout_marginTop="@dimen/margin_top_25"
        android:background="@drawable/bt_close" />

    <Button
        android:id="@+id/btn_login"
        style="@style/text_style_nomal_28"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="@dimen/margin_top_35"
        android:layout_marginLeft="@dimen/l_r_25"
        android:layout_marginRight="@dimen/l_r_25"
        android:layout_marginTop="@dimen/margin_top_35"
        android:background="@drawable/button"
        android:text="@string/login_now"
        android:textColor="@color/app_white" />

    <TextView
        android:id="@+id/textView1"
        style="@style/text_style_nomal_28"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="@string/please_login_secretary" />

</RelativeLayout>