<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/w_full_h_wrap"
    android:background="@color/app_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35" >

        <TextView
            android:id="@+id/tv_institution_title"
            style="@style/text_style_big_34"
            android:layout_marginBottom="@dimen/margin_top_25"
            android:layout_marginTop="@dimen/margin_top_35"
            android:text="中国与"
            android:textColor="#6F6F6F" />

        <com.android.pc.ioc.image.RecyclingImageView
            android:id="@+id/iv_institution_open"
            style="@style/w_wrap_h_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/activity_open" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_bg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_institution_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_institution_content"
            style="@style/text_style_small_24"
            android:layout_marginBottom="@dimen/margin_top_25"
            android:layout_marginTop="@dimen/margin_top_25"
            android:text="日本境内日本境内日本境内日本境内"
            android:textColor="#6f6f6f" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_institution_title2"
            style="@style/text_style_nomal_28"
            android:layout_marginTop="@dimen/margin_top_25"
            android:text="日本境内"
            android:textColor="#6f6f6f" />

        <TextView
            android:id="@+id/tv_institution_telephone"
            style="@style/text_style_nomal_28"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="日本境内"
            android:textColor="@color/app_green1" />

        <TextView
            android:id="@+id/tv_institution_address"
            style="@style/text_style_nomal_28"
            android:layout_marginBottom="@dimen/margin_top_35"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="日本境内"
            android:textColor="#6f6f6f" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_top_35"
        android:background="#EBEBEB" />

</LinearLayout>