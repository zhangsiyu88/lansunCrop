<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/l_r_35"
        android:layout_marginRight="@dimen/l_r_35"
        android:background="#EBEBEB"
        android:paddingTop="@dimen/margin_top_17"
        android:paddingBottom="@dimen/margin_top_17"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/ll_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/l_r_20"
            android:background="@drawable/secretary_reply"
            android:gravity="center" >

            <com.lansun.qmyo.view.CircularImage
                android:id="@+id/iv_user_head"
                style="@style/secretary_head_small_80" />
        </LinearLayout>

        <com.lansun.qmyo.view.TextPage
            android:id="@+id/tv_user_question"
            style="@style/text_style_nomal_28"
            android:layout_marginLeft="@dimen/store_detail_head_h"
            android:layout_toLeftOf="@id/ll_user_head"
            android:background="@drawable/secretary_user_dialog"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/l_r_50"
            android:textColor="@color/text_black_1"
            android:longClickable="true"
            android:linksClickable="true"
            android:autoLink="all"
            android:textIsSelectable="true"
            android:cursorVisible="true"
            
             />
    </RelativeLayout>