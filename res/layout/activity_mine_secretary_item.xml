<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/l_r_35"
    android:paddingRight="@dimen/l_r_35" >

    <RelativeLayout
        style="@style/w_full_h_wrap"
        android:background="@color/app_white"
        android:paddingLeft="@dimen/l_r_30" >

        <LinearLayout
            android:id="@+id/mine_secretary_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/secretary_reply"
            android:gravity="center" >

            <com.lansun.qmyo.view.CircularImage
                android:id="@+id/iv_mine_secretary_head"
                style="@style/secretary_head_small_80" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mine_secratary_item_name"
            style="@style/text_style_big_34"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginTop="@dimen/margin_top_22"
            android:layout_toRightOf="@id/mine_secretary_item_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ZARA(淮海中路店)"
            android:textColor="@color/text_gray1" />

        <TextView
            android:id="@+id/tv_mine_secratary_item_time"
            style="@style/text_style_small_26"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_mine_secratary_item_name"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="15:17" />

        <TextView
            android:id="@+id/tv_mine_secratary_item_desc"
            style="@style/text_style_small_26"
            android:layout_width="@dimen/tv_w_400"
            android:layout_alignLeft="@id/tv_mine_secratary_item_name"
            android:layout_below="@id/tv_mine_secratary_item_name"
            android:layout_marginTop="@dimen/margin_top_22"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="ZARA2015春夏新品全新上线，现在还有优惠折扣" />

        <TextView
            android:id="@+id/tv_mine_secratary_item_count"
            style="@style/text_style_small_26"
            android:layout_alignBottom="@id/tv_mine_secratary_item_desc"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35"
            android:background="@drawable/circle_background_red"
            android:ellipsize="end"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/app_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_22"
            android:layout_below="@id/tv_mine_secratary_item_desc"
            android:background="@color/app_white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_top_35" />

</LinearLayout>