<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_top_35"
    android:paddingLeft="@dimen/l_r_35"
    android:paddingRight="@dimen/l_r_35"
    android:paddingTop="@dimen/margin_top_35" >

    <TextView
        style="@style/text_style_nomal_28"
        android:text="@string/take_question_form" />

    <EditText
        android:id="@+id/et_secretary_form_content"
        style="@style/text_style_small_24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/secretary_form_h"
        android:layout_marginTop="@dimen/margin_top_35"
        android:background="@drawable/tv_style_gray"
        android:gravity="top"
        android:paddingLeft="@dimen/l_r_35"
        android:paddingRight="@dimen/l_r_35"
        android:paddingTop="@dimen/margin_top_35" />

    <Button
        android:id="@+id/btn_secretary_commit_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_35"
        android:background="@drawable/button"
        android:text="@string/secretary_renwu"
        android:textColor="@color/app_white" />

</LinearLayout>