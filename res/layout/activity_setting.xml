<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_h"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_activity_back"
            style="@style/w_wrap_h_wrap"
            android:layout_gravity="center"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_activity_title"
            style="@style/text_style_big_40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/app_green2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_grey5" />

    <ImageView
        android:id="@+id/bt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_center_setting" />

    <LinearLayout
        style="@style/w_full_h_wrap"
        android:background="@color/app_white" >

        <RelativeLayout
            android:id="@+id/rl_mine_comments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_menu_h"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35" >

            <TextView
                style="@style/text_style_nomal_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/l_r_14"
                android:text="@string/setting_clear_cache" />

            <ImageView
                android:id="@+id/iv_setting_clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_r" />

            <TextView
                android:id="@+id/tv_setting_cache_size"
                style="@style/text_style_big_34"
                android:layout_alignBottom="@id/iv_setting_clear_cache"
                android:layout_marginRight="@dimen/l_r_35"
                android:layout_toLeftOf="@id/iv_setting_clear_cache" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_grey5" />

    <LinearLayout
        style="@style/w_full_h_wrap"
        android:background="@color/app_white" >

        <RelativeLayout
            android:id="@+id/rl_mine_comments1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_menu_h"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35" >

            <TextView
                style="@style/text_style_nomal_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/l_r_14"
                android:text="@string/feedback" />

            <ImageView
                android:id="@+id/iv_setting_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_r" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_grey5" />

    <LinearLayout
        style="@style/w_full_h_wrap"
        android:background="@color/app_white" >

        <RelativeLayout
            android:id="@+id/rl_mine_comments2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_menu_h"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35" >

            <TextView
                style="@style/text_style_nomal_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/l_r_14"
                android:text="@string/help_center" />

            <ImageView
                android:id="@+id/iv_setting_help_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_r" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_grey5" />

</LinearLayout>