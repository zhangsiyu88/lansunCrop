<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.pc.ioc.image.RecyclingImageView
            android:id="@+id/iv_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/l_r_35"
            android:layout_marginTop="@dimen/margin_top_12"
            android:background="@drawable/circle_background_gray_1"
            android:gravity="center" >

            <com.android.pc.ioc.image.RecyclingImageView
                android:id="@+id/iv_secretary_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/secretary_help_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_35"
            android:background="@drawable/secretary_headportrait_small"
            android:gravity="center" >

            <com.lansun.qmyo.view.CircularImage
                android:id="@+id/iv_secretary_head"
                style="@style/secretary_head_small"
                android:background="@drawable/secretary_defaulthead" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_25"
        android:background="@color/app_green1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_top_35"
        android:paddingTop="@dimen/margin_top_35" >

        <TextView
            android:id="@+id/tv_header_secretary_title"
            style="@style/text_style_small_26"
            android:layout_marginLeft="@dimen/l_r_35"
            android:layout_marginRight="@dimen/l_r_35"
            android:textColor="@color/app_white" />

        <View
            style="@style/line_style_1"
            android:layout_marginTop="@dimen/margin_top_20"
            android:background="@color/app_white" />

        <RelativeLayout
            android:id="@+id/iv_header_secretary_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_20" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv"
                    style="@style/w_wrap_h_wrap"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/click_look_more"
                    android:textColor="@color/app_white" />

                <com.android.pc.ioc.image.RecyclingImageView
                    android:id="@+id/iv_header_secretary_more"
                    style="@style/w_wrap_h_wrap"
                    android:layout_marginLeft="@dimen/l_r_15"
                    android:src="@drawable/secretary_more" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>